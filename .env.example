# Backend Environment Configuration
# Copy this file to .env.example and configure your settings

# Current Backend Environment
# Options: production, local, custom
BACKEND_ENVIRONMENT=production

# Backend URLs
PRODUCTION_API_URL=https://payment-dashboard-z1s2.onrender.com/api
LOCAL_API_URL=http://localhost:3002/api
CUSTOM_API_URL=https://your-backend.herokuapp.com/api

# MongoDB Settings (for local/custom backends)
MONGODB_URI=mongodb://localhost:27017/payment_dashboard
# or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/payment_dashboard

# JWT Settings (for local/custom backends)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server Port (for local backends)
PORT=3002

# Additional Settings
NODE_ENV=development
